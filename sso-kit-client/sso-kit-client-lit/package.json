{
  "name": "@hilla/sso-kit-client-lit",
  "version": "2.1.0",
  "description": "SSO Kit Client Lit",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/vaadin/sso-kit.git",
    "directory": "sso-kit-client/sso-kit-client-lit"
  },
  "keywords": [
    "SSO",
    "Kit",
    "Client",
    "Hilla"
  ],
  "scripts": {
    "clean:build": "rimraf *.{d.ts.map,d.ts,js.map,js}",
    "build": "concurrently npm:build:*",
    "build:transpile": "tsc --isolatedModules -p tsconfig.build.json",
    "build:copy": "cd src && copyfiles **/*.d.ts ..",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "test": "mocha test/**/*.test.ts --config ../../.mocharc.json",
    "test:update": "npm run test -- --update",
    "test:coverage": "c8 -c ../../.c8rc.json npm test",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "default": "./index.js"
    },
    "./SingleSignOnContext.js": {
      "default": "./SingleSignOnContext.js"
    },
    "./index.js": {
      "default": "./index.js"
    }
  },
  "author": "Vaadin Ltd",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/vaadin/sso-kit/issues"
  },
  "homepage": "https://hilla.dev",
  "files": [
    "*.{d.ts.map,d.ts,js.map,js}"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@hilla/frontend": "2.0.0",
    "mobx": "6.3.3",
    "tslib": "^2.3.1",
    "typescript": "^5.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.1",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.5",
    "c8": "^7.10.0",
    "chai": "^4.3.4",
    "concurrently": "^6.3.0",
    "copyfiles": "^2.4.1",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "type-fest": "^2.5.1"
  }
}
