{
  "name": "@hilla/sso-kit-client",
  "version": "2.1.0",
  "description": "SSO Kit Client",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/vaadin/sso-kit.git",
    "directory": "sso-kit-client"
  },
  "keywords": [
    "SSO",
    "Kit",
    "Client",
    "Hilla"
  ],
  "scripts": {
    "clean:build": "rimraf *.{d.ts.map,d.ts,js.map,js}",
    "build": "concurrently npm:build:*",
    "build:transpile": "tsc --isolatedModules -p tsconfig.build.json",
    "build:copy": "cd src && copyfiles **/*.d.ts ..",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "test": "karma start ../karma.config.cjs --port 9878",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "default": "./index.js"
    },
    "./EndpointImportError.js": {
      "default": "./EndpointImportError.js"
    },
    "./SingleSignOnContext.js": {
      "default": "./SingleSignOnContext.js"
    },
    "./index.js": {
      "default": "./index.js"
    },
    "./AccessProps.js": {
      "types": "./AccessProps.d.ts"
    },
    "./SingleSignOnData.js": {
      "types": "./SingleSignOnData.d.ts"
    },
    "./User.js": {
      "types": "./User.d.ts"
    }
  },
  "author": "Vaadin Ltd",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/vaadin/sso-kit/issues"
  },
  "homepage": "https://hilla.dev",
  "files": [
    "*.{d.ts.map,d.ts,js.map,js}"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@hilla/frontend": "2.0.0",
    "tslib": "^2.3.1"
  },
  "peerDependencies": {
    "lit": "^2.3.0"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@types/chai": "^4.2.22",
    "@types/chai-dom": "^1.11.0",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "chai": "^4.3.4",
    "chai-dom": "^1.11.0",
    "concurrently": "^6.3.0",
    "copyfiles": "^2.4.1",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage": "^2.2.0",
    "karma-mocha": "^2.0.1",
    "karma-spec-reporter": "^0.0.36",
    "karma-vite": "^1.0.4",
    "mocha": "^10.2.0",
    "rimraf": "^3.0.2",
    "sinon": "^15.0.2",
    "sinon-chai": "^3.7.0"
  }
}
