{
  "name": "@hilla/sso-kit",
  "private": true,
  "description": "SSO Kit Client",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=16.19.0",
    "npm": ">=9"
  },
  "workspaces": [
    "sso-kit-client/*"
  ],
  "scripts": {
    "check": "concurrently npm:lint npm:typecheck",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --include-dependencies",
