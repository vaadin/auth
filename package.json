    "postinstall": "npm run bootstrap",
    "test": "lerna run test --parallel",
    "test:coverage": "lerna run test:coverage --parallel",
    "typecheck": "lerna run typecheck --parallel"
  },
  "repository": {
    "type": "git",
    "url": "github.com/vaadin/sso-kit"
  },
  "author": "Vaadin Ltd",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.3",
    "@types/sinon": "^10.0.13",
    "@types/validator": "^13.7.14",
    "chai-dom": "^1.11.0",
    "concurrently": "^7.6.0",
    "esbuild": "^0.17.12",
    "eslint": "^7.32.0",
    "eslint-config-vaadin": "^0.4.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "lerna": "^6.5.1",
    "mocha": "^10.2.0",
    "nx": "^15.8.6",
    "sinon": "^15.0.2",
    "tsx": "^3.12.5",
    "typescript": "^5.0.2",
    "vite": "^4.2.0"
